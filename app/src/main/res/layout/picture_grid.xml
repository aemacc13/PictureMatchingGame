<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <!-- first four across -->
    <ImageButton
        android:id="@+id/pic00"
        android:layout_column="0" android:layout_row="0"
        style="@style/TileButton"/>
    <ImageButton
        android:id="@+id/pic01"
        android:layout_column="1" android:layout_row="0"
        style="@style/TileButton"/>
    <ImageButton
        android:id="@+id/pic02"
        android:layout_column="2" android:layout_row="0"
        style="@style/TileButton"/>
    <ImageButton
        android:id="@+id/pic03"
        android:layout_column="3" android:layout_row="0"
        style="@style/TileButton"/>

    <!-- second four across -->
    <ImageButton
        android:id="@+id/pic10"
        android:layout_column="0" android:layout_row="1"
        style="@style/TileButton"/>
    <ImageButton
        android:id="@+id/pic11"
        android:layout_column="1" android:layout_row="1"
        style="@style/TileButton"/>
    <ImageButton
        android:id="@+id/pic12"
        android:layout_column="2" android:layout_row="1"
        style="@style/TileButton"/>
    <ImageButton
        android:id="@+id/pic13"
        android:layout_column="3" android:layout_row="1"
        style="@style/TileButton"/>

    <!-- third four across -->
    <ImageButton
        android:id="@+id/pic20"
        android:layout_column="0" android:layout_row="2"
        style="@style/TileButton"/>
    <ImageButton
        android:id="@+id/pic21"
        android:layout_column="1" android:layout_row="2"
        style="@style/TileButton"/>
    <ImageButton
        android:id="@+id/pic22"
        android:layout_column="2" android:layout_row="2"
        style="@style/TileButton"/>
    <ImageButton
        android:id="@+id/pic23"
        android:layout_column="3" android:layout_row="2"
        style="@style/TileButton"/>

    <!-- fourth four across -->
    <ImageButton
        android:id="@+id/pic30"
        android:layout_column="0" android:layout_row="3"
        style="@style/TileButton"/>
    <ImageButton
        android:id="@+id/pic31"
        android:layout_column="1" android:layout_row="3"
        style="@style/TileButton"/>
    <ImageButton
        android:id="@+id/pic32"
        android:layout_column="2" android:layout_row="3"
        style="@style/TileButton"/>
    <ImageButton
        android:id="@+id/pic33"
        android:layout_column="3" android:layout_row="3"
        style="@style/TileButton"/>
</GridLayout>