<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- http://stackoverflow.com/questions/8570982/disable-or-prevent-multitouch-in-activity -->
        <!-- disable multitouch so more than two image buttons cannot be pressed at a time -->
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
    </style>
    
    <style name="MenuButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/menu_button_shape</item>
        <item name="android:layout_margin">@dimen/button_margin</item>
        <item name="android:padding">@dimen/button_padding</item>
        <item name="android:radius">@dimen/button_radius</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/button_text</item>
        <item name="android:textColor">@color/button_text</item>
    </style>

    <style name="TileButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/poke_balls</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_margin">@dimen/tile_margin</item>
        <item name="android:padding">@dimen/tile_padding</item>
    </style>

</resources>
